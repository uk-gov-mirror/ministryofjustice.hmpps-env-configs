      category        = "Build"
      owner           = "AWS"
      provider        = "CodeBuild"
      version         = "1"
      run_order       = 2
      configuration = {
        ProjectName   = var.projects["terraform"]
        PrimarySource = "code"
        EnvironmentVariables = jsonencode(
